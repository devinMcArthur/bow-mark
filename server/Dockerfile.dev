FROM node:16-alpine

WORKDIR /usr/app

ENV NODE_ENV=development
ENV CHOKIDAR_USEPOLLING=true

COPY package*.json ./
RUN npm install -qy

COPY . .

EXPOSE 8080

# No default CMD - each deployment specifies its command:
#   server/worker: npm run start:dev
#   consumer: npm run start:consumer-dev
