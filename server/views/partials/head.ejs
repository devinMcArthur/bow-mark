<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"> 
    <title><%= (typeof title != "undefined" ? title : "") %></title>
    <script src="/js/libs/jquery-3.3.1.min.js"></script>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type='text/css' rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
    <link type='text/css' rel="stylesheet" href="/css/style.css" />
    <script src="/js/header.js"></script>
    <style>.pointer {cursor: pointer;}</style>
  </head>
  <body>
    <ul id="dropdown1" class="dropdown-content">
      <% if (!session.user) {%>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">Signup</a></li>
      <% } else { %>
        <li><a href="/logout">Logout</a></li>
        <li><a href="/users">Users</a></li>
        <li><a href="/jobsites">Jobsites</a></li>
        <li><a href="/employees">Employees</a></li>
        <li><a href="/vehicles">Vehicles</a></li>
        <li><a href="/crews">Crews</a></li>
        <li><a href="/reports">Reports</a></li>
      <% } %>
    </ul>
    <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper" id="navbar">
          <a href="/" class="brand-logo">Bow Mark</a>
          <ul class="right hide-on-sm-and-down">
            <li><a class="dropdown-trigger right" href="" data-target="dropdown1">Links<i class="material-icons right">arrow_drop_down</i></a></li>
          </ul>
        </div>
      </nav>
    </div>
    <% if (typeof dangerMessage != "undefined") { %>
      <div class="row" id="alert-box">
        <div class="col s12 m12">
          <div class="card red darken-1">
            <div class="row">
              <div class="col s12 m10">
                <div class="card-content white-text">
                  <%= dangerMessage %>
                </div>
              </div>
              <div class="col s12 m2">
                <i class="material-icons right icon-white pointer" id="alert-close" aria-hidden="true">close</i>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } else if (stuff.query.dangerMessage) { %>
      <div class="row" id="alert-box">
        <div class="col s12 m12">
          <div class="card red darken-1">
            <div class="row">
              <div class="col s12 m10">
                <div class="card-content white-text">
                  <%= stuff.query.dangerMessage %>
                </div>
              </div>
              <div class="col s12 m2">
                <i class="material-icons right icon-white pointer" id="alert-close" aria-hidden="true">close</i>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>